<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="menu">
	<sql id="includeBoard">
		<if test="searchKeyword != null and searchKeyword != ''">
			where menu_id != 0 and (
			<foreach item="item" index="index" collection="searchTypeArr" separator="or">
				${item} like CONCAT('%',#{searchKeyword},'%')
			</foreach>
			)
		</if>
	</sql>
	
	<select id="total" resultType="Integer" parameterType="searchVO">
		select COUNT(*) from menu
		<include refid="includeBoard" />
	</select>
	
	<select id="list" resultType="Menu" parameterType="searchVO">
		select * , (select count(*) from menu_comment m where m.menu_id=menu.menu_id) as cnt from menu
		<include refid="includeBoard"/>
		order by menu_id desc LIMIT ${rowStart-1},${displayRowCount}
	</select>
	
	<insert id="add" parameterType="Menu">
		insert into menu(menu_name,menu_content,menu_date,id,img_chk)
		values(#{menuName},#{menuContent},NOW(),#{id},#{imgChk})
	</insert>
	
	<select id="item" resultType="Menu">
		select * from menu where menu_id=#{menuId}
	</select>
	
	<update id="update" parameterType="Menu">
		update menu set menu_name=#{menuName},menu_content=#{menuContent}
		where menu_id=#{menuId}
	</update>
	
	<delete id="delete">
		delete from menu where menu_id=#{menuId}
	</delete>
	
	<select id="commentList" resultType="MComment">
		select * from menu_comment where menu_id=#{menuId}
	</select>
	
	<insert id="commentAdd" parameterType="MComment">
		insert into menu_comment
		(id,menu_id,mcomment_content,mcomment_date)
		values(#{id},#{menuId},#{mcommentContent},NOW())
	</insert>
	
	<delete id="commentDel">
		delete from menu_comment where mcomment_id = #{mcommentId}
	</delete>
	
	<update id="commentUpdate">
		update menu_comment
		set mcomment_content = #{mcommentContent}, mcomment_date=NOW()
		where mcomment_id = #{mcommentId}
	</update>
	
	<update id="views" parameterType="Menu">
		update menu
		set menu_views= menu_views+1
		where menu_id=#{menuId}
	</update>
	
	<update id="selection">
		update menu_comment
		set selection_check = 1
		where mcomment_id = #{mcommentId}
	</update>
	
	<update id="pointUp" parameterType="UserVO">
		update user
		set point = point + 10
		where username = #{id}
	</update>
	
	<select id="onlyOnceSelection" resultType="Integer">
		select distinct COUNT(mc.selection_check)
		from menu_comment mc JOIN menu m ON mc.menu_id = m.menu_id
		where mc.menu_id = #{menuId} and mc.selection_check=1
	</select>
	
</mapper>